    <script>
        function showTab(tabId) {
            // Prevent default link behavior
            event.preventDefault();
            
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => {
                content.classList.remove('active');
            });
            
            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab content
            document.getElementById(tabId).classList.add('active');
            
            // Add active class to selected tab
            if (tabId === 'deskripsi') {
                document.getElementById('deskripsiTab').classList.add('active');
            } else {
                document.getElementById('syaratTab').classList.add('active');
            }
        }
        
        function toggleContent(contentType) {
            if (contentType === 'deskripsi') {
                const shortContent = document.getElementById('deskripsiShort');
                const expandedContent = document.getElementById('deskripsiExpanded');
                const toggleButton = document.getElementById('toggleDeskripsi');
                
                if (expandedContent.style.display === 'none') {
                    // Show expanded content
                    shortContent.style.display = 'none';
                    expandedContent.style.display = 'block';
                    toggleButton.textContent = 'Tampilkan Lebih Sedikit';
                } else {
                    // Show short content
                    shortContent.style.display = 'block';
                    expandedContent.style.display = 'none';
                    toggleButton.textContent = 'Tampilkan Semua';
                }
            } else if (contentType === 'syarat') {
                const shortContent = document.getElementById('syaratShort');
                const expandedContent = document.getElementById('syaratExpanded');
                const toggleButton = document.getElementById('toggleSyarat');
                
                if (expandedContent.style.display === 'none') {
                    // Show expanded content
                    shortContent.style.display = 'none';
                    expandedContent.style.display = 'block';
                    toggleButton.textContent = 'Tampilkan Lebih Sedikit';
                } else {
                    // Show short content
                    shortContent.style.display = 'block';
                    expandedContent.style.display = 'none';
                    toggleButton.textContent = 'Tampilkan Semua';
                }
            }
        }
    </script>
