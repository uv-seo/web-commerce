    <script>
        // Banner slider functionality
        function activateSlide(slideNumber) {
            // Hide all slides
            const slides = document.querySelectorAll('.banner-slide');
            slides.forEach(slide => {
                slide.classList.remove('active');
                slide.setAttribute('aria-hidden', 'true');
            });
            
            // Deactivate all dots and tabs
            const dots = document.querySelectorAll('.dot');
            dots.forEach(dot => {
                dot.classList.remove('active');
            });
            
            const dotLinks = document.querySelectorAll('.dot-link');
            dotLinks.forEach(link => {
                link.setAttribute('aria-selected', 'false');
            });
            
            // Activate selected slide and dot
            const activeSlide = document.getElementById('slide-' + slideNumber);
            activeSlide.classList.add('active');
            activeSlide.setAttribute('aria-hidden', 'false');
            
            const activeDot = document.getElementById('dot-' + slideNumber);
            activeDot.classList.add('active');
            
            const activeDotLink = activeDot.closest('.dot-link');
            activeDotLink.setAttribute('aria-selected', 'true');
        }
        
        // Pause auto-rotation when user prefers reduced motion
        let slideInterval;
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        
        if (!prefersReducedMotion) {
            // Auto-rotate banners every 5 seconds
            let currentSlide = 1;
            slideInterval = setInterval(function() {
                currentSlide = currentSlide % 5 + 1;
                activateSlide(currentSlide);
            }, 5000);
        }
        
        // Tab switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const voucherTab = document.getElementById('voucher-tab');
            const topupTab = document.getElementById('topup-tab');
            const voucherContent = document.getElementById('voucher-content');
            const topupContent = document.getElementById('topup-content');
            
            voucherTab.addEventListener('click', function() {
                voucherContent.style.display = 'grid';
                topupContent.style.display = 'none';
                voucherTab.classList.add('active');
                topupTab.classList.remove('active');
                voucherTab.setAttribute('aria-selected', 'true');
                topupTab.setAttribute('aria-selected', 'false');
            });
            
            topupTab.addEventListener('click', function() {
                voucherContent.style.display = 'none';
                topupContent.style.display = 'grid';
                voucherTab.classList.remove('active');
                topupTab.classList.add('active');
                voucherTab.setAttribute('aria-selected', 'false');
                topupTab.setAttribute('aria-selected', 'true');
            });
            
            // Add keyboard navigation for tabs
            voucherTab.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowRight') {
                    topupTab.focus();
                    topupTab.click();
                }
            });
            
            topupTab.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowLeft') {
                    voucherTab.focus();
                    voucherTab.click();
                }
            });
            
            // Ensure scrollable containers work with keyboard
            document.querySelectorAll('.voucher-container, .food-container').forEach(container => {
                container.tabIndex = 0;
                container.addEventListener('keydown', function(e) {
                    // Horizontal scrolling with arrow keys
                    if (e.key === 'ArrowRight') {
                        this.scrollLeft += 100;
                        e.preventDefault();
                    } else if (e.key === 'ArrowLeft') {
                        this.scrollLeft -= 100;
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
</body>
